<table>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %><br>
        <%= link_to "#{book_comment.user.name}", user_path(book_comment.user) %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user_id == current_user.id %>
          <%= link_to "Destroy", book_book_comments_path(book_comment), method: :delete, remote: true, class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>